<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AiChef.Client.Pages.RecipeState>
            @* all components are child of recipe state
               like a global variable that all pages can access
               for maintaining the session state
            *@
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(TopNavLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </AiChef.Client.Pages.RecipeState>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(TopNavLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
